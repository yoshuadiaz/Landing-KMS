	text-align center
	color $KMS-Azul
	margin-bottom 3em
	font-size .8em
///// ETIQUETAS ////
body
	background-color $KMS-Blanco
	&.blanco
		background-color white
img
	max-width 100%
	height auto
header
	background-color white
	display block
	top 0
	left 0
	width 100%
	z-index 30
	box-shadow 0 .15em .1em rgba(0,0,0,.3)
	position fixed
	z-index 20
	height 4.5em
	nav
		h1
			display inline-block
			vertical-align middle
			margin 0
			padding-top .2em
			@media (max-width:705px)
				display block
				text-align center
		.menuInvocador
			position absolute
			right 1em
			top 1em
			width 2.5em
			display none
			@media(max-width:705px)
				display block
		ul
			padding 0
			margin 0
			display inline-block
			vertical-align middle
			width 90%
			@media (max-width:705px)
				background-color rgba(white, 0.9)
				box-shadow inset 0 .25em .25em rgba(black,.1)
				position fixed
				top 4.5em
				left 0
				width 100%
				overflow hidden
				height auto
				z-index 1
				height 100%
				padding-top 1em
				transition all .5s ease
				display none
				&.activo
					display block
			li
				display inline-block
				transition all .25s ease
				padding .25em
				vertical-align middle
				@media (max-width:705px)
					display block
					text-align center
					font-size 1.5em
					border-bottom 2px solid lighten($KMS-Gris, 50%)
				&:hover
					transform scale(1.1)
					@media (max-width:705px)
						background-color white
						box-shadow 0 0 .25em rgba(black,.5)
				&:after
					content "/"
					color lighten($KMS-Gris,50%)
					padding 0 .5em
					@media (max-width:705px)
						content ""
						padding 0
				&:first-child:after
					content ""
				&:nth-child(5):after
					content ""
				a
					color $KMS-Azul
					text-decoration none
					display inline
					@media (max-width: 705px)
						display block
				&.KMS
					color blue
				&.IniciarSesion
					color $KMS-Verde
					float right
					cursor pointer
					@media (max-width:705px)
						display block
						text-align center
						float none
					&:after
						content "/"
						@media (max-width:705px)
							content ""
				&.Software
					color $KMS-Rosa
					float right
					cursor pointer
					@media (max-width:705px)
						display block
						text-align center
						float none
					&:after
						content ""
