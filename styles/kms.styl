@import "vendors/grid.styl"
@import "../bower_components/animate.css/animate.min.css"
////// VARIABLES ///////
columns = 12
column-width = 60
gutter-width = 20
total-width = 100%


$KMS-Rosa = #ff6168
$KMS-Verde = #a7d06a
$KMS-Azul = #00c5db
$KMS-Aqua = #00ccc3
$KMS-AzulOscuro = #147caf
$KMS-Gris = #b3b3b3
$KMS-Blanco = #f2f2f2


///// CLASES //////
.container
	max-width 980px
	margin 0 auto
	clear both
	display block
	&.homeSlides
		margin 0 4em
		overflow hidden
		position relative
.section
	padding-top 5em
	box-sizing border-box
.btn
	background-color lighten($KMS-Gris, 60%)
	border-radius .25em
	color $KMS-Azul
	padding .25em 2em
	text-decoration none
	display block
	clear both
	max-width 100px
	margin 1em auto!important
	text-align center
	&:hover
