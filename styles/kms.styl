	background-size cover
	background-position center center
	color white
	box-sizing border-box
	@media (max-width:730px)
		background-attachment inherit
	.homeSlides
		max-height 480px
		@media(max-width:730px)
			max-height inherit
			padding-bottom 2em
	#imagenCelular
		column(7)
		img
			position absolute
			bottom 0
			right 0
			width 360px
		@media(max-width:730px)
			height 0
			display none
	#bienvenida
		column(5)
		padding 1.5em 0 3em
		text-align center
		&.bienvenida2
			@media (max-width:730px)
				display none
		@media (max-width:730px)
			column(12)
			padding-top 2em
		h2
			font-size 5em
			margin 0
		h3
			margin 0
		form
			input[type="text"]
				column(12)
				background-color transparent
				border 1px solid white
				color white
				padding .5em
